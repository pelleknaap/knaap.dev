---
import { Picture } from "@astrojs/image/components";

const { src, alt, height, width, full, eager } = Astro.props;
const calculatedWidth = full ? 763 : width;
const calculatedHeight = src.height / (src.width / calculatedWidth);
---

<Picture
  src={src}
  alt={alt}
  widths={[calculatedWidth]}
  width={calculatedWidth}
  height={calculatedHeight}
  loading={eager ? "eager" : "lazy"}
/>
