<svg viewBox="0 0 100 100" class="scroll-spinner">
  <circle cx="50" cy="50" r="30" pathLength="1" class="background"></circle>
  <circle cx="50" cy="50" r="30" pathLength="1" class="foreground"></circle>
</svg>

<style lang="scss">
  .scroll-spinner {
    transform: rotate(-90deg);
    width: 100%;
    height: 100%;

    circle {
      stroke-dashoffset: 0;
      stroke-width: 15%;
      fill: none;
    }

    .background {
      stroke: rgb(var(--color-accent-muted));
    }

    .foreground {
      stroke: rgb(var(--color-accent));
      stroke-dasharray: 0, 1;
    }
  }
</style>

<script is:inline>
  import { scroll, animate } from "motion";

  scroll(animate(".foreground", { strokeDasharray: ["0,1", "1,1"] }));
</script>
